# --- General App ---
PORT="3000"
NODE_ENV="DEVELOPMENT"

# --- JWT Configuration ---
JWT_SECRET="YOUR_JWT_SECRET_HERE"
JWT_EXPIRES_IN="12h"
JWT_ALGORITHM="HS256"

# --- OTP and Security ---
OTP_VALID_TIME_MINUTES="3"
SALT_ROUNDS="10"

# --- Email Configuration ---
EMAIL_USER="youremail@example.com"
EMAIL_PASSWORD="your_email_password"
EMAIL_HOST="smtp.example.com"

# --- Database Configuration ---
DB_USERNAME="your_db_user"
DB_PASSWORD="your_db_password"
DB_DATABASE_NAME="your_db_name"
DB_HOST="localhost"
DB_PORT="5432"
DB_DIALECT="postgres"
DB_LOGGING=false # "true", "1", "yes" are considered as truthy values

# --- Sequelize Pool Settings ---
DB_POOL_MAX="100"
DB_POOL_MIN="5"
DB_POOL_ACQUIRE="30000"
DB_POOL_IDLE="10000"

# --- Sequelize Retry ---
DB_RETRY="3"

# Redis Credentials
REDIS_HOST=localhost
REDIS_PORT=6379
